    ''' <param name="isFull"></param>
    ''' <remarks></remarks>
    Protected Function CreateDataFilter(Optional ByVal isFull As Boolean = False) As DataTable
        Dim rep As New AttendanceRepository
        Dim obj As New AT_LEAVE_PAYMENTDTO
        Dim method As String = System.Reflection.MethodBase.GetCurrentMethod().Name.ToString()
        Try
            Dim startTime As DateTime = DateTime.UtcNow
            Dim MaximumRows As Integer
            SetValueObjectByRadGrid(rgData, obj)
            Dim _param = New ParamDTO With {.ORG_ID = ctrlOrganization.CurrentValue,
                                           .IS_DISSOLVE = ctrlOrganization.IsDissolve,
                                           .IS_FULL = True}
            Dim Sorts As String = rgData.MasterTableView.SortExpressions.GetSortString()
            If rdtungay.SelectedDate.HasValue Then
                obj.FROM_DATE = rdtungay.SelectedDate
            End If
            If rdDenngay.SelectedDate.HasValue Then
                obj.TO_DATE = rdDenngay.SelectedDate
            End If

            If Not isFull Then
                If Sorts IsNot Nothing Then
                    rgData.DataSource = rep.GetLeavePayments(obj, _param, MaximumRows, rgData.CurrentPageIndex, rgData.PageSize, "CREATED_DATE desc")
                Else
                    rgData.DataSource = rep.GetLeavePayments(obj, _param, MaximumRows, rgData.CurrentPageIndex, rgData.PageSize)
                End If
            Else
                Return rep.GetLeavePayments(obj, _param).ToTable
            End If

            rgData.VirtualItemCount = MaximumRows
            _myLog.WriteLog(_myLog._info, _classPath, method, CLng(DateTime.UtcNow.Subtract(startTime).TotalSeconds).ToString(), Nothing, "")
        Catch ex As Exception
            _myLog.WriteLog(_myLog._error, _classPath, method, 0, ex, "")
        End Try
    End Function

